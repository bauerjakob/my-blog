---
export const prerender = false;

import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

import path from "node:path";
import fs from "node:fs/promises";
import matter from "gray-matter";
import { Image } from "astro:assets";

async function getAllPosts() {
	const POSTS_DIR = path.resolve("/app/content/blog");
	const files = await fs.readdir(POSTS_DIR);

	const posts = await Promise.all(
		files
			.filter((file) => (file.endsWith(".md") || file.endsWith(".mdx")) && !file.startsWith(".") && !file.startsWith("_"))
			.map(async (file) => {
				const slug = file.replace(/\.(md|mdx)$/, "");
				const filePath = path.join(POSTS_DIR, file);
				const raw = await fs.readFile(filePath, "utf-8");
				const { data } = matter(raw);

				return {
					slug,
					title: data?.title ?? slug,
					pubDate: data?.pubDate
						? new Date(data.pubDate)
						: new Date(0),
					heroImage: data?.heroImage ?? null,
					description: data?.description ?? "",
				};
			}),
	);

	return posts.sort((a, b) => b.pubDate.valueOf() - a.pubDate.valueOf());
}

const posts = await getAllPosts();
console.log(posts);
